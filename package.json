{
  "name": "vscode-indentWhitespace",
  "displayName": "Indent Whitespace",
  "description": "Enlarge the rendering of indentation spaces",
  "version": "0.2.0",
  "publisher": "rioj7",
  "engines": { "vscode": "^1.62.0" },
  "categories": ["Other"],
  "keywords": ["whitespace","space","indent"],
  "activationEvents": ["*"],
  "license": "MIT",
  "main": "./indentWhiteSpace",
  "browser": "./indentWhiteSpace",
  "icon": "assets/icon.png",
  "contributes": {
    "configuration": {
      "title": "Indent Whitespace",
      "properties": {
        "indentWhitespace.space.enlargement": {
          "type": "integer",
          "default": 1,
          "minimum": 0,
          "description": "Make every indent space larger"
        },
        "indentWhitespace.space.positionDecorator": {
          "type": "string",
          "enum": ["before", "after"],
          "default": "after",
          "description": "Position of the indent space decorator"
        }
      }
    },
    "colors": [
      {
        "id": "indentWhitespace.space.enlargement",
        "description": "Color for the indent space decoration.",
        "defaults": {
          "dark": "#ffffff18",
          "light": "#f0000010",
          "highContrast": "#ffffff",
          "highContrastLight": "#000000"
        }
      }
    ]
  },
  "repository": {
    "url": "https://github.com/rioj7/vscode-indentWhiteSpace.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/rioj7/vscode-indentWhiteSpace/issues"
  },
  "homepage": "https://github.com/rioj7/vscode-indentWhiteSpace"
}